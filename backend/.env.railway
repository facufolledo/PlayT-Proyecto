# Variables de entorno para Railway
# Estas variables deben configurarse en el dashboard de Railway

# CORS Origins - CRÍTICO para producción
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://kioskito.click", "https://www.kioskito.click"]

# App Configuration
APP_NAME=PlayR API
APP_VERSION=1.0.0
DEBUG=false

# Host y Puerto (Railway los maneja automáticamente)
HOST=0.0.0.0
PORT=8000

# Firebase (configurar en Railway dashboard)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account",...}

# Database (Railway lo configura automáticamente)
# DATABASE_URL=postgresql://...

# Logging
LOG_LEVEL=INFO