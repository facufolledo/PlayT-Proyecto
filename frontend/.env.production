# Configuración para producción
# Copia este archivo a .env y actualiza los valores

# API Configuration (Backend en Render)
VITE_API_URL=https://playt-backend.onrender.com

# WebSocket URL (Backend en Render)
VITE_WS_URL=wss://playt-backend.onrender.com

# Firebase Configuration (Producción)
VITE_FIREBASE_API_KEY=tu_api_key_de_firebase
VITE_FIREBASE_AUTH_DOMAIN=tu_proyecto.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=tu_proyecto_id
VITE_FIREBASE_STORAGE_BUCKET=tu_proyecto.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# App Configuration
VITE_APP_NAME=PlayR
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Analytics (opcional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true